<style>

   .wrapper {
      display: flex;
      flex-flow: row wrap;
   }

   .child {
      margin: 0 10px;
   }

   .righted {
      order: 999;
      margin-left: auto;
   }
</style>

<span id="content">
   <section id="quickForm">
      <input type="hidden" name="post_id" value="{{ post.post_id }}">
      <div class="container-fluid">
         <div class="card card-green collapsed-card">
         <div class="card-header ">
            <h3 class="card-title">Дополнительные настройки</h3>
            <div class="card-tools ml-xl-6">
               <button type="button" class="btn btn-tool" data-card-widget="collapse">
               <i id="sett-collapse" data-check="0"
                  class="fas fa-minus">
               </i>
               </button>
            </div>
         </div>
         <div class="card-body">
            <div class="row">
               <div class="col-3">
                  <h5 class="mt-4 mb-2">Добавить группу</h5>
                  <div class="input-group">
                     <input type="text" id="group-name" value="" name="groupName" class="form-control">
                     <span class="input-group-append">
                     <button type="button" id="go" class="btn btn-info btn-flat">Go!</button>
                     </span>
                  </div>
               </div>
               <div class="col-4">
                  <h5 class="mt-4 mb-2">Выбрать группу</h5>
                  <div class="form-group">
                     <select class="form-control select2" name="category" id="content-admin">
                        {% for names in data %}
                            <option value="{{ names.id }}" {% if names.id == post.category_id %}selected{% endif %} name="da">{{ names.name }}</option>
                        {% endfor %}
                     </select>
                  </div>
               </div>
            </div>


             <div class="form-group">
                 <label for="editor2">Краткое описание</label>
                 <textarea name="monolog" class="form-control text-area"  rows="10" cols="80">{{ post.monolog }}</textarea>
             </div>

            <div class="form-group">
                       <label for="editor3">Фотография</label>
                       <textarea name="image" class="form-control text-area"  id="editor3" rows="10" cols="80">{{ post.image }}</textarea>
                     </div>
         </div>
      </div>
      <div class="row">
         <div class="col-md-12">
            <div class="card card-green">
               <div class="card-header">
                  <h3 class="card-title">Редактор статьи</h3>
               </div>
               <form role="form" action="/creator" method="post">
                  <div class="card-body">
                     <div class="form-group">
                        <label for="exampleInputEmail1">Title</label>
                        <input type="email" name="title" value="{{ post.title }}" class="form-control" id="exampleInputEmail1">
                     </div>
                     <span class="meta">
                        {% for meta in metas %}
                        <span class="form-group clone ">
                           <label for="exampleInputPassword1">Мета</label>
                              <textarea id="exampleInputPassword1" type="password" name="meta[{{ meta.id }}]" data-id="{{ meta.id }}" data-postid="{{ post.id }}" class="exampleInputPassword form-control textarea">{{ meta.name }}</textarea>
                        </span>
                        {% endfor %}
                     </span>
                     <div class="form-group">
                       <label for="editor4">Статья</label>
                       <textarea name="content" class="form-control text-area"  id="editor4" rows="10" cols="80">{{ post.content }}</textarea>
                     </div>
                     <div class="form-group mb-0">
                        <div >
                           <label for="check">
                           <input type="checkbox" name="public" {% if post.public == 1 %} checked {% endif %}/>
                           <span class="fake-input"></span>
                           <span class="fake-label">{% if post.public == 1 %} Опубликованно{% else %}Опубликовать {% endif %}</span>
                           </label>
                        </div>
                     </div>
                  </div>
                  <div class="card-footer">
                     <button type="button" id="add-post" class="btn btn-primary">Сохранить</button>
                  </div>
               </form>
            </div>
         </div>
         <div class="col-md-6">
         </div>
      </div>
      </div>
   </section>
</span>
