{% for post in posts%}
    <div class="card col-md-11 ml-5 mt-3">
        <div class="card-header">
            <h3 class="card-title">{{post.title}}</h3>

            <div class="card-tools">
                <a class="btn btn-primary btn-sm" href="/admin/post/{{ post.id }}">
                    <i class="fas fa-folder">
                    </i>
                    Посмотреть
                </a>
                <a class="btn btn-info btn-sm" href="/admin/edit/{{ post.id }}">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Редактировать
                </a>
                <a class="btn btn-danger btn-sm" href="#">
                    <i class="fas fa-trash">
                    </i>
                    Скрыть
                </a>
            </div>
        </div>
        <div class="card-body">
            {% autoescape false %}
                {{ post.monolog }}
            {% endautoescape %}        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            {{ post.create_date }}
        </div>
        <!-- /.card-footer-->
    </div>
{% endfor %}